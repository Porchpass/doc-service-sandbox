table {
  border-radius: var(--radius-radius-minimal);
  border: 1px solid var(--color-border-border);
  width: 518px;
}

th, td {
  border-top: 1px solid var(--color-border-border-subtle);
  border-left: 1px solid var(--color-border-border-subtle); 
}

td {
  padding: var(--size-12);
}

tfoot {
  border-top: 1px solid var(--color-border-border-subtle);
  background-color: var(--color-surface-container-subtle);
  font-size: 12px;
}

/* utils */

.container-narrow  {
  max-width: 580px;
  margin: 0 auto;
}

.text-muted {
  color: var(--color-on-surface-on-surface-muted);
}

.standard-footer {
  border-top: 1px solid var(--color-border-border-dim);
  padding-top: var(--size-8);
}

footer, footer p, footer small {
  font-family: Inter;
  font-size: 12px;
  font-style: normal;
  font-weight: 400;
  line-height: normal; 
}

footer small {
  color: var(--color-on-surface-on-surface-muted);
}

/* partials */

.standard-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 12px;
  align-items: space-between;
}

.ecra-notice {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: var(--space-spacing-3-xs, 8px); 
  border-top: 1px solid var(--color-border-border, #D2D5DB);
  background: var(--color-surface-container-subtle, #F9FAFB); 
  padding: var(--space-spacing-2-xs, 12px);
  margin: 0 auto;
  width: 580px;
}