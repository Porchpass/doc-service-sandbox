  display: flex;
}

.flex-row {
  flex-direction: row;
}

.flex-column {
  flex-column: row;
}

.justify-content-start {
  justify-content: flex-start;
}

.justify-content-center {
  justify-content: flex-center;
}

.justify-content-end {
  justify-content: flex-end;
}

.justify-content-space-around {
  justify-content: space-around;
}

.justify-content-space-between {
  justify-content: space-between;
}

.align-items-start {
  align-items: flex-start;
}

.align-items-center {
  align-items: flex-center;
}

.align-items-end {
  align-items: flex-end;
}

.align-items-stretch {
  align-items: stretch;
}

/* gap */

.gap-none {
  gap: 0;
}

.gap-xxs {
  gap: var(--space-xxs);
}

.gap-xs {
  gap: var(--space-xs);
}

.gap-sm {
  gap: var(--space-sm);
}

.gap-md {
  gap: var(--space-md);
}

.gap-lg {
  gap: var(--space-lg);
}

.gap-xl {
  gap: var(--space-xl);
}

.gap-xxl {
  gap: var(--space-xxl);
}

/* padding */
.p-none {
  padding: 0;
}

/* margin */
.m-none {
  margin: 0;
}

.mt-none {
  margin: 0;
}

.mr-none {
  margin-right: 0;
}

.ml-none {
  margin-left: 0;
}

.mb-none {
  margin-bottom: 0;
}

.mx-none {
  margin-left: 0;
  margin-right: 0;
}

.my-none {
  margin-top: 0;
  margin-bottom: 0;
}

/* font size */

.font-xxs {
  font-size: var(--font-xxs);
}

.font-xs {
  font-size: var(--font-xs);
}

.font-sm {
  font-size: var(--font-sm);
}

.font-md {
  font-size: var(--font-md);
}

.font-lg {
  font-size: var(--font-lg);
}

.font-xl {
  font-size: var(--font-xl);
}

.font-xxl {
  font-size: var(--font-xxl);
}

/* font weight */

.font-normal {
  font-weight: normal !important;
}

.font-bold {
  font-weight: bold;
}

/* text color */

.text-muted {
  color: var(--color-on-surface-on-surface-muted);
}

/************/
/* partials */
/************/

.standard-header {
  padding-top: var(--space-lg);
  height: 85px;
  border-bottom: 1px solid var(--color-border-border-subtle); 
}

.standard-header svg {
  width: 125px;
  height: auto;
}

.standard-footer {
  border-top: 1px solid var(--color-border-border-dim);
  padding-top: var(--space-xs);
}

.customers-info {
  display: flex;
  gap: 20px;
  border-bottom: 1px solid var(--color-border-border-subtle); 
  border-left: none;
  border-right: none;
  padding: 0px;
  margin: 0px;
}

.customers-info table {
  margin: var(--space-xs) 0px;
}

.customers-info td, .customers-info th {
  padding-top: 2px;
  padding-bottom: 2px;
  padding-left: 0px;
  padding-right: var(--space-lg);
}