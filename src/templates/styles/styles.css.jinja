:root {
  --color-on-surface-on-surface: #111827;
  --color-on-surface-on-surface-muted: #4A5466;
  --color-surface-container-subtle: #F9FAFB;
  --color-border-border-subtle: #EAECF0;
  --color-border-border-dim: #9AA2B2;
  --color-border-border: #D2D5DB;
  --size-4: 4px;
  --size-8: 8px;
  --size-12: 12px;
  --radius-radius-minimal: 8px;
}

/* DocRaptor styles */

header {
  flow: static(header-html);
}

footer {
  flow: static(footer-html);
}

h1 { counter-reset: chapter; }

@page {
  size: A4 portrait;
  margin: 90px 0.75in;
  @top {
    content: flow(header-html);
  }
  @bottom {
    content: flow(footer-html);
  }
}

/* css reset - https://www.digitalocean.com/community/tutorials/css-minimal-css-reset */
html {
  box-sizing: border-box;
  font-size: 16px;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body, h1, h2, h3, h4, h5, h6, p, ol, ul {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

p {
  font-size: 14px;
  margin-bottom: var(--size-12);
}

ol, ul {
  list-style: none;
}

img {
  max-width: 100%;
  height: auto;
}

/* our styles begin */

body {
  font-family: 'Inter', sans-serif;
  color: var(--color-on-surface-on-surface);
  font-family: Inter;
  font-size: 12px;
  font-style: normal;
  font-weight: 400;
  line-height: normal; 
}

h1, h2, h3, h4, h5, h6 {
  color: var(--color-on-surface-on-surface);
  font-family: Inter;
  font-style: normal;
  font-weight: 600;
  line-height: normal;
  font-weight: 700;
}

h1 {
  font-size: 29.333px;
}

h2 {
  font-size: 20px;
  font-style: normal;
}

h3 {
  font-size: 14px;
}

h4 {
  font-size: 12px;
}

hr {
  height: var(--space-spacing-none, 0.667px);
  background: var(--color-border-border-dim); 
}

